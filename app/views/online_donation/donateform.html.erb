<h1>Donate form</h1>
<form method="post" action="donateamnt">
	<div class="form-group">
		<label for="name" class="control-label col-sm-3"><i class="fa fa-money"></i>&nbsp;Enter Amount</label><label style="color: red"><%= session[:msg] %></label>
		<div class="col sm-10">
		<input type="number" class="form-control" name="amnt" required placeholder="Amount">
		</div>
	</div>
	<div class="form-group">
		<div class="col sm-10" align="center">
		<button type="submit" class="btn-lg btn-success">Confirm Donation</button>
		</div>
	</div>
</form>